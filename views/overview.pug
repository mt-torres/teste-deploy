doctype html 
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            //link(rel='stylesheet' href='/css/style.css')
            //link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")

            title #{title}
    body
        //CONTENT
        block content
            nav(class="navbar navbar-expand-lg bg-body-tertiary")
                div(class="container")
                    a(class="navbar-brand" href="#")
                    //-img(alt="Bootstrap" width="30" height="24")
                div(class="container-fluid")
                a(class="navbar-brand" href="#") Navbar
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarSupportedContent")
                    ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                        li(class="nav-item")
                            a(class="nav-link active" aria-current="page" href="#") Home
                        li(class="nav-item")
                            a(class="nav-link active" aria-current="page" href="#") Link
                        li(class="nav-item")
                            a(class="nav-link active" aria-current="page" href="#") Load
            each funcionario in funcionarios
                div(class="card" style="width: 18rem;")
                    //-img(class="card-img-top" alt="...")
                    div(class="card-body")
                        h5(class="card-title")=funcionario.name
                        p(class="card-text") Some quick example text to build on the card title and make up the bulk of the card's content.
                    ul(class="list-group list-group-flush")
                        li(class="list-group-item")=funcionario.email
                        li(class="list-group-item")=funcionario.role
        //FOOTER   
        script(src="/js/index.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")